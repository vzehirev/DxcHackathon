{% extends "/shared/layout.twig" %}

{% block content %}

    <br>
    <h4 class="text-muted" style="text-align: center">SIGN UP</h4>
    <br>

    <div class="container marketing">
        {% if errors %}
            <ul>
                {% for error in errors %}
                    <li class="text-danger">{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        <form action="\signup" method="post">
            <fieldset>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username:</label>
                    <input name="username" type="text" class="form-control" id="username" placeholder="Enter username" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">E-mail:</label>
                    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter e-mail" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password:</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Enter password" required>
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Sign up</button>
            </fieldset>
        </form>
    </div><!-- /.row -->

{% endblock %}